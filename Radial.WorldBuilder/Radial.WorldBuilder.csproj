  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Radial\Radial.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="cd $(OutDir)&#xD;&#xA;dotnet &quot;$(TargetPath)&quot;&#xD;&#xA;cd $(ProjectDir)&#xD;&#xA;copy /y &quot;$(OutDir)\Locations.json&quot; &quot;..\Radial\Resources\Locations.json&quot;" />
  </Target>

</Project>
